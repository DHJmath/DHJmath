{{>layout/header}}

<section>
    <div class="content">
        <h1>자유게시판 수정</h1>
        <br><br><br><br>

        <div class="form-div">
            <table class="write-tab">
                <tr>
                    <td>제목</td>
                    <td>
                        <input type="text" id="boardTitle" value="{{board.boardTitle}}">
                    </td>
                </tr>
                <tr>
                    <td><input type="hidden" id="userId" value="{{board.userId}}"></td>
                    <td><input type="hidden" id="boardId" value="{{board.boardId}}"></td>
                </tr>
                <tr>
                    <td>내용</td>
                    <td>
                        <textarea id="boardContent" cols="100" rows="40" value="{{board.boardContent}}"></textarea>
                    </td>
                </tr>
            </table>

            <br><br><br>

            <div class="btn-div">
                <button class="board-btn" type="button" id="btn-update">수정하기</button>
                <button class="board-btn" type="button">수정취소</button>
            </div>


            <br><br><br><br><br>

        </div>

    </div>

</section>

{{>layout/footer}}